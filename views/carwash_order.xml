<odoo>
    <data>
        <!-- Carwash Order Views -->
        <record model="ir.ui.view" id="carwash_order_tree">
            <field name="name">carwash_order.list</field>
            <field name="model">compose_auto_clean.carwash_order</field>
            <field name="arch" type="xml">
                <list>
                    <field name="customer_id"/>
                    <field name="vehicle_id"/>
                    <field name="service_name"/>
                    <field name="price"/>
                    <field name="duration"/>
                    <field name="variant"/>
                    <field name="payment_status"/>
                    <field name="order_date"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="carwash_order_form">
            <field name="name">carwash_order.form</field>
            <field name="model">compose_auto_clean.carwash_order</field>
            <field name="arch" type="xml">
                <form string="Carwash Order">
                    <sheet>
                        <group>
                            <group string="Customer &amp; Vehicle">
                                <field name="customer_id" options="{'no_create': True}"/>
                                <field name="vehicle_id" options="{'no_create': True}"/>
                            </group>
                            <group string="Order Info">
                                <field name="order_date"/>
                                <field name="payment_status" widget="badge" 
                                       decoration-success="payment_status == 'lunas'"
                                       decoration-info="payment_status == 'belum bayar'"/>
                            </group>
                        </group>
                        <group string="Service Details">
                            <group>
                                <field name="service_name"/>
                                <field name="variant"/>
                            </group>
                            <group>
                                <field name="price"/>
                                <field name="duration" widget="float_time"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="carwash_order_action">
            <field name="name">Carwash Orders</field>
            <field name="res_model">compose_auto_clean.carwash_order</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- menu categories -->
        <menuitem name="Carwash Orders" id="menu_carwash_orders" parent="menu_root"/>
        <!-- actions -->
        <menuitem name="Carwash Orders" id="menu_carwash_orders_list" parent="menu_carwash_orders" action="carwash_order_action"/>
    </data>
</odoo>