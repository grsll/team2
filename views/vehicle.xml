<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!-- Add you code here -->
        <record id="vehicle_view_list" model="ir.ui.view">
            <field name="name">compose_auto_clean.vehicle.list</field>
            <field name="model">compose_auto_clean.vehicle</field>
            <field name="arch" type="xml">
                <list string="Daftar Kendaraan" decoration-info="vehicle_type == 'mobil'" decoration-success="vehicle_type == 'motor'">
                    <field name="name"/>
                    <field name="vehicle_type" decoration-info="vehicle_type == 'mobil'" decoration-success="vehicle_type == 'motor'"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="customer_id"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <record id="cdn_vehicle_view_form" model="ir.ui.view">
            <field name="name">cdn.vehicle.form</field>
            <field name="model">cdn.vehicle</field>
            <field name="arch" type="xml">
                <form string="Form Kendaraan">
                <header>
                    <button name="action_archive" string="Archive Vehicle" type="object" invisible="not active" class="btn-secondary"/>
                </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_wash_history" type="object" class="oe_stat_button" icon="fa-tint">
                            <field name="wash_count" widget="statinfo" string="Cuci"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Contoh: B 1234 ABC"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="vehicle_type" widget="radio" options="{'horizontal': true}"/>
                                <field name="customer_id"/>
                                <field name="active" invisible="1"/>
                                <field name="wash_count"/>
                            </group>
                            <group>
                                <field name="brand" placeholder="Contoh: Toyota / Honda"/>
                                <field name="color" widget="color_picker"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Riwayat Cuci" name="wash_history">
                                <field name="carwash_ids" readonly="1">
                                    <list>
                                        <field name="name" string="Nomor Order"/>
                                        <field name="date" string="Tanggal"/>
                                        <field name="state" widget="badge"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- compose_auto_clean.vehicle action window -->
        <record id="vehicle_action" model="ir.actions.act_window">
            <field name="name">compose_auto_clean.vehicle.action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">compose_auto_clean.vehicle</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_vehicle_act" name="Vehicle" parent="menu_master_data" action="vehicle_action" sequence="20"/>
    </data>

</odoo>

